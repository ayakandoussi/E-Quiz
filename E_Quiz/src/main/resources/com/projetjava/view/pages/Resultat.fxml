<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" style="-fx-background-color: blue;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projetjava.controller.ResultatPageController">
    <children>
        <!-- Navbar -->
        <Pane layoutY="0" prefHeight="53.0" prefWidth="600.0" style="-fx-background-color: blue;">
            <children>
                <Label fx:id="rolelabel" alignment="CENTER" layoutX="111.0" layoutY="12.0" prefHeight="29.0" prefWidth="383.0" text="Role : Nom Prenom" textFill="WHITE">
                    <font>
                        <Font size="17.0" />
                    </font>
                </Label>
                <ImageView fitHeight="88.0" fitWidth="92.0" layoutY="-10.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                </ImageView>
                <MenuButton fx:id="menu" layoutX="524.0" layoutY="14.0" mnemonicParsing="false" style="-fx-background-color: blue;" text="menu" textFill="WHITE">
                    <items>
                        <MenuItem fx:id="Accueil" mnemonicParsing="false" text="Accueil" />
                        <MenuItem fx:id="Profil" mnemonicParsing="false" text="Profil" />
                        <MenuItem fx:id="SeDeconnecter" mnemonicParsing="false" text="Se deconnecter" />
                    </items>
                </MenuButton>
            </children>
        </Pane>

        <!-- Contenu principal (RÃ©sultat) -->
        <Pane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;">
            <children>
                <!-- Titre -->
                <Label alignment="CENTER" layoutX="243.0" layoutY="44.0" prefHeight="53.0" prefWidth="116.0" style="-fx-background-color: red;" text="RESULTAT" textFill="#fcf8f8">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>

                <!-- Texte "Vous avez obtenu :" -->
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="33.0" layoutY="178.0" prefHeight="53.0" prefWidth="215.0" style="-fx-text-fill: black;" text="Vous avez obtenu :" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="22.0" />
                    </font>
                </Label>

                <!-- Remarque -->
                <Label fx:id="remarqueLabel" alignment="CENTER" layoutX="229.0" layoutY="123.0" prefHeight="53.0" prefWidth="143.0" text="REMARQUE !!">
                    <font>
                        <Font name="System Bold Italic" size="16.0" />
                    </font>
                </Label>

                <!-- Score -->
                <Label fx:id="scoreLabel" layoutX="318.0" layoutY="245.0" prefHeight="45.0" prefWidth="25.0" style="-fx-background-color: blue;" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="25.0" />
                    </font>
                </Label>

                <!-- "/20" -->
                <Label fx:id="scoreLabel1" layoutX="343.0" layoutY="245.0" prefHeight="45.0" prefWidth="52.0" style="-fx-background-color: blue;" text="/20" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="25.0" />
                    </font>
                </Label>
            </children>
        </Pane>
    </children>
</VBox>
