<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projetjava.controller.QuestionController">
    <children>
        <!-- Navbar -->
        <Pane layoutY="0" prefHeight="53.0" prefWidth="600.0" style="-fx-background-color: blue;">
            <children>
                <Label fx:id="rolelabel" alignment="CENTER" layoutX="208.0" layoutY="12.0" prefHeight="29.0" prefWidth="185.0" text="Role : Nom Prenom" textFill="WHITE">
                    <font>
                        <Font size="17.0" />
                    </font>
                </Label>
                <ImageView fitHeight="88.0" fitWidth="92.0" layoutY="-10.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                </ImageView>
                <MenuButton layoutX="524.0" layoutY="14.0" mnemonicParsing="false" style="-fx-background-color: blue;" text="menu" textFill="WHITE">
                    <items>
                        <MenuItem fx:id="Accueil" mnemonicParsing="false" text="Accueil" />
                        <MenuItem fx:id="Profil" mnemonicParsing="false" text="Profil" />
                        <MenuItem mnemonicParsing="false" text="Se deconnecter" />
                    </items>
                </MenuButton>
            </children>
        </Pane>

        <!-- Question Label avec retour à la ligne -->
        <Label fx:id="questionLabel" layoutX="63.0" layoutY="80.0" prefHeight="61.0" prefWidth="474.0" style="-fx-background-color: beige;" text="Question ici" />

        <!-- Choix de réponses sous forme de RadioButton -->
        <RadioButton fx:id="choix1" layoutX="33.0" layoutY="167.0" mnemonicParsing="false" text="Choix 1">
            <toggleGroup>
                <ToggleGroup fx:id="choix" />
            </toggleGroup>
        </RadioButton>

        <RadioButton fx:id="choix2" layoutX="33.0" layoutY="244.0" mnemonicParsing="false" text="Choix 2" toggleGroup="$choix" />
        
        <RadioButton fx:id="choix3" layoutX="332.0" layoutY="167.0" mnemonicParsing="false" text="Choix 3" toggleGroup="$choix" />
        
        <RadioButton fx:id="choix4" layoutX="332.0" layoutY="244.0" mnemonicParsing="false" text="Choix 4" toggleGroup="$choix" />
        
        <!-- Bouton pour passer à la question suivante -->
        <Button fx:id="suivantButton" layoutX="252.0" layoutY="335.0" onAction="#questionSuivante" style="-fx-background-color: blue; -fx-text-fill: white;" text="Suivant" />

    </children>
</AnchorPane>
