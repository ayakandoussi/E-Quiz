<AnchorPane prefHeight="335.0" prefWidth="511.0" stylesheets="@../../../../../../../../../../Users/Bouchama/styles/questionpage.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projetjava.controller.QuestionController">
    <children>
