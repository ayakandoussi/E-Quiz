        <TextField fx:id="questionField" editable="false" layoutX="25.0" layoutY="42.0" prefHeight="61.0" prefWidth="474.0" />
        
        <!-- Cases à cocher pour les choix de réponses -->
        <CheckBox fx:id="choix1" layoutX="49" layoutY="156" />
        <CheckBox fx:id="choix2" layoutX="49" layoutY="215" />
        <CheckBox fx:id="choix3" layoutX="368" layoutY="156" />
        <CheckBox fx:id="choix4" layoutX="368" layoutY="215" />
        
        <!-- Boutons pour valider la réponse et passer à la suivante -->
        <Button fx:id="validerButton" layoutX="88.0" layoutY="260.0" onAction="#validerReponse" style="-fx-background-color: blue; -fx-text-fill: white;" stylesheets="@../../../../../../../../../../Users/Bouchama/styles/questionpage.css" text="Valider" />
        <Button fx:id="suivantButton" layoutX="320.0" layoutY="260.0" onAction="#questionSuivante" style="-fx-background-color: blue; -fx-text-fill: white;" text="Suivant" />
    </children>
</AnchorPane>
